# ===========================================
# RPA Bank Scrapers - Environment Variables
# ===========================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# -----------------
# Nequi Credentials
# -----------------
NEQUI_PHONE=3001234567
NEQUI_PASSWORD=your_nequi_password

# -----------------
# Davivienda Credentials
# -----------------
DAVIVIENDA_USER=your_davivienda_user
DAVIVIENDA_PASSWORD=your_davivienda_password
DAVIVIENDA_DOCUMENT_TYPE=CC  # CC, CE, TI, PA, NIT

# -----------------
# Email Configuration (for payment notifications)
# -----------------
EMAIL_PROVIDER=gmail  # gmail or outlook
EMAIL_ADDRESS=your_email@gmail.com
# For Gmail: Create App Password at https://myaccount.google.com/apppasswords
# For Outlook: Use your regular password or app password
EMAIL_APP_PASSWORD=your_app_password

# -----------------
# Supabase (Optional - for direct sync)
# -----------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key
SUPABASE_USER_ID=your_user_uuid

# -----------------
# Scraper Settings
# -----------------
# Timeout in milliseconds for page loads
PAGE_TIMEOUT=30000
# Timeout for waiting for elements
ELEMENT_TIMEOUT=10000
# Run browser in headless mode (no visible window)
HEADLESS=true
# Take screenshots on error
SCREENSHOT_ON_ERROR=true
# Debug mode (verbose logging)
DEBUG=false

# -----------------
# Output Settings
# -----------------
OUTPUT_DIR=./output
LOG_DIR=./logs
STORAGE_DIR=./storage
